syntax on
colorscheme molokai
set ruler
set cmdheight=1
set hid
set laststatus=2
:highlight ExtraWhitespace ctermbg=red guibg=red
:match ExtraWhitespace /\s\+$/
set nocompatible
set history=700
set viminfo^=%
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
set whichwrap=<,>,[,]
